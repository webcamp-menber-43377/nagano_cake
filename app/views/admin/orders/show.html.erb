        <table  class="table table-hover table-inverse">
          <tr>
            <th>購入者</th>
            <td><%= link_to @order.customer.last_name + @order.customer.first_name, admin_customer_path(:id) %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.postal_code %>&emsp;<%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td><%#= @order.status_i18n %>
              <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                <%= f.select :status, Order.status_i18n.invert, {prompt: false} %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>

          </tr>
        </table>
      </div>

      <div class="col-md-8">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @order.order_details.each do |order_detail| %>
              <tr>
                <!--商品名-->
                <td><%= order_detail.item.name %></td>
                <!--単価（税込）-->
                <td><%= order_detail.item.with_tax_price.round.to_s(:delimited) %></td>
                <!--数量-->
                <td><%= order_detail.amount %></td>
                <!--小計-->
                <td><%= order_detail.subtotal.round.to_s(:delimited) %></td>
                <!--製作ステータス／プルダウン-->
                <td><%#= order_detail.making_status_i18n %>
                  <%= form_with model: order_detail, url: admin_order_path, method: :patch, local: true do |f| %>
                    <%= f.select :making_status, order_detail.making_status_i18n.invert %>
                    <%= f.submit '更新', class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <!--更新ボタン-->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-4">
        <table>
          <tbody>
            <tr>
              <th>商品合計</th>
                <% @total = 0 %>
              <td>
                <% @order.order_details.each do|order_detail| %>
                  <% @total += order_detail.item.with_tax_price * order_detail.amount %>
                <% end %>
                <%= @total.round.to_s(:delimited) %>
              </td>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <th>請求金額合計&emsp;</th>
              <td><%= @order.total_payment.round.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>

      </div>
