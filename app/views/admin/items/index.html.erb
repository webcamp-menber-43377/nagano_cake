<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>商品一覧</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == true %>
                  販売中
                  <% else %>
                  販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div style="text-align:center">
          <%= link_to '商品新規登録', new_admin_item_path, class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>