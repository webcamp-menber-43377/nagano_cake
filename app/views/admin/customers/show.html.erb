<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="container-fluid">
          <div class="row justify-content-between">
            <table>
              <tbody>
                <tr>
                  <td>会員ID</td>
                  <td><%= @customer.id %></td>
                </tr>
                <tr>
                  <td>氏名</td>
                  <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
                </tr>
                <tr>
                  <td>フリガナ</td>
                  <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                  <td>郵便番号</td>
                  <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                  <td>住所</td>
                  <td><%= @customer.address %></td>
                </tr>
                <tr>
                  <td>電話番号</td>
                  <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                  <td>メールアドレス</td>
                  <td><%= @customer.email %></td>
                </tr>
                <tr>
                  <td>会員ステータス</td>
                  <td>
                    <% if @customer.is_active == true %>
                    有効
                    <% else %>
                    退会
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="row justify-content-center">
            <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-sm btn-success" %>
            <%= link_to '注文履歴一覧を見る', public_orders_path_path, class: "btn btn-sm btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>