<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
      </div>

      <div class="row justify-content-between">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
          <div class="form-group">
            <label for="customer_id">会員ID</label>
            <%= @customer.id %>
          </div>
          <div class="form-group">
            <label for="customer_name">氏名</label>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
          <div class="form-group">
            <label for="customer_name_kana">フリガナ</label>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
          <div class="form-group">
            <label for="customer_postal_code">郵便番号</label>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <label for="customer_address">住所</label>
            <%= f.text_field :address %>
          </div>
          <div class="form-group">
            <label for="customer_telephone_number">電話番号</label>
            <%= f.telephone_field :telephone_number %>
          </div>
          <div class="form-group">
            <label for="customer_email">メールアドレス</label>
            <%= f.email_field :email %>
          </div>
          <div class="form-group">
            <label for="customer_is_deleted">会員ステータス</label>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会" %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
          </div>
          <div class="form-group">
            <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>