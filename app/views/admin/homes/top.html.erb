<!--管理者トップページ(注文履歴一覧画面)-->
<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>注文履歴一覧</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.updated_at, admin_order_path(order.id) %></td>
                <td><%= order.customer.last_name + order.customer.first_name %></td>
                <td><%= order.order_details.all.sum(:amount) %></td>
                <td><%= order.status_i18n %></td>
              </tr>
            <% end %>
            <%= paginate @orders_page %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>