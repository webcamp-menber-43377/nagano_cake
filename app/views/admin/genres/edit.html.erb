<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>ジャンル編集</h2>
        <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
          <div class="form-group">
            <label for="genre_name">ジャンル名</label>
            <%= f.text_field :name %>
            <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>