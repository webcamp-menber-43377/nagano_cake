<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規会員登録</h2>

      <table>
        <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <tr>
            <td><%= f.label :name, "名前" %></td>
            <td>(姓) <%= f.text_field :last_name %></td>
            <td>(名) <%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td><%= f.label "フリガナ" %></td>
            <td>(セイ) <%= f.text_field :last_name_kana %></td>
            <td>(メイ) <%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.number_field :postal_code %></td>
          </tr>

          <tr>
            <td><%= f.label "住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>

          <tr>
            <td><%= f.label "電話番号(ハイフンなし)" %></td>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </table>

      <div>　</div>
      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      <%#= render "public/shared/links" %>

    </div>
  </div>
</div>
