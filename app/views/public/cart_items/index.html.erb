<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-md-2 offset-md-4">
      <!--「カートを空にする」赤ボタン-->
      <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <!--↓「削除する」赤ボタン-->
          <th></th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size: "100x100" %>　<%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.round.to_s(:delimited) %></td>
            <td>
              <%= cart_item.amount %>
              <%= link_to '変更', cart_item_path(cart_item.id), method: :patch , class: "btn btn-sm btn-success" %>
            </td>
            <td><%= cart_item.subtotal.round.to_s(:delimited) %></td>
            <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
            <% @total += cart_item.subtotal %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="col-md-4 offset-md-5">
      <table  class="table table-hover table-inverse">
        <tr>
          <td>合計金額</td>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div style="text-align:center">
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>

</div>