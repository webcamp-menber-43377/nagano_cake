<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>会員情報編集</h3>
    </div>
      <div class="row justify-content-between">
        <table>
          <tbody>
            <%= form_with model: @customer, url: customers_information_path do |f| %>
              <tr>
                <th>氏名</th>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
              </tr>
              <tr>
                <th>フリガナ</th>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= f.telephone_field :telephone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= f.email_field :email %></td>
              </tr>
              <tr>
                <td><%#= link_to '編集内容を保存', customers_information_path, class: "btn btn-sm btn-success" %>
                  <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
                </td>
                <td><%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

  </div>
</div>