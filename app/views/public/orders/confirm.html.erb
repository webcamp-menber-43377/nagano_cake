<%#= render 'public/shared/error_messages', resource: @order %>

<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>注文情報確認</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <table  class="table table-hover table-inverse">
          <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= image_tag cart_item.item.image, size: "100x100" %>　<%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price.round.to_s(:delimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal.round.to_s(:delimited) %></td>
                <% @total += cart_item.subtotal %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4 offset-md-1">
        <table  class="table table-hover table-inverse">
          <tr>
            <th>送料</th>
            <% @order.shipping_cost = 800 %>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total.round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <% @order.total_payment = @order.shipping_cost + @total %>
            <td><%= @order.total_payment.round.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <table>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>〒<%= @order.postal_code %>&nbsp&nbsp<%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
        </table>

        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
          <div style="text-align:center">
            <%= f.submit '注文を確定する', class: "btn btn-sm btn-success" %>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :postal_code, value: @order.postal_code %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
            <%= f.hidden_field :total_payment, value: @order.total_payment %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>