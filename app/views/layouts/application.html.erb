<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>LOGO</span></a>
        </div>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customers_signed_in? %>
              <!--マイページ-->
              <li>
                <%= link_to "マイページ", my_page_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--商品一覧-->
              <li>
                <%= link_to "商品一覧", items_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--カート-->
              <li>
                <%= link_to "カート", cart_items_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--ログアウト-->
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, class: 'nav-link text-light', method: :delete do %>
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <!--商品一覧-->
              <li>
                <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--会員一覧-->
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--注文履歴一覧-->
              <li>
                <%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--ジャンル一覧-->
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--ログアウト-->
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, class: 'nav-link text-light', method: :delete do %>
                <% end %>
              </li>
            <% else %>
              <!--About-->
              <li>
                <%= link_to "About", public_about_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--商品一覧-->
              <li>
                <%= link_to "商品一覧", public_items_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--新規登録-->
              <li>
                <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
              <!--ログイン-->
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-light' do %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>


      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
    </footer>
  </body>
</html>
